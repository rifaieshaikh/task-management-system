# ============================================
# Task Management System - Production Environment
# ============================================
#
# SECURITY CHECKLIST:
# [ ] Changed all default passwords
# [ ] Generated secure JWT secret (256+ bits)
# [ ] Configured SSL/TLS certificates
# [ ] Set up database backups
# [ ] Configured monitoring and alerting
# [ ] Reviewed and restricted CORS origins
# [ ] Disabled debug logging
# [ ] Set up log rotation
# [ ] Configured firewall rules
# [ ] Enabled rate limiting
#
# ============================================

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=taskdb_prod
POSTGRES_USER=taskuser_prod
# CRITICAL: Use a strong password (32+ characters)
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_FROM_SECRET_MANAGER
DB_HOST=postgres
DB_PORT=5432

# ============================================
# Backend Configuration
# ============================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ============================================
# Security Configuration
# ============================================
# CRITICAL: Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_FROM_SECRET_MANAGER

# CORS - Restrict to your production domains only
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Frontend Configuration
# ============================================
# Use your production API URL
REACT_APP_API_URL=https://api.yourdomain.com/api
REACT_APP_API_TIMEOUT=15000

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ============================================
# Monitoring & Observability
# ============================================
ENABLE_ACTUATOR_ENDPOINTS=true
LOG_LEVEL=WARN

# ============================================
# Performance Configuration
# ============================================
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET
AWS_REGION=us-east-1

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=REPLACE_WITH_SENDGRID_API_KEY
SMTP_FROM=noreply@yourdomain.com

# ============================================
# Feature Flags
# ============================================
FEATURE_SWAGGER_UI=false
FEATURE_ACTUATOR_DETAILS=false
